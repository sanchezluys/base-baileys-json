        "cross-env": "^7.0.3",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "fs-extra": "^11.1.0",
        "git-cz": "^4.9.0",
        "husky": "^8.0.3",
        "mime-types": "^2.1.35",
        "only-allow": "^1.1.1",
        "prettier": "^2.8.4",
        "pretty-quick": "^3.1.3",
        "prompts": "^2.4.2",
        "rimraf": "^4.1.2",
        "rollup": "^3.17.2",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-copy": "^3.4.0",
        "semver": "^7.3.8",
        "standard-version": "^9.5.0",
        "uvu": "^0.5.6"
    },
    "packageManager": "pnpm@7.25.1",
